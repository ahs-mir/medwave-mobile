              ) : (
                letterTypes.map((type) => (
                  <TouchableOpacity
                    key={type.id}
                    style={styles.bottomSheetOption}
                    onPress={() => handleGenerateLetter(type.id)}
                  >
                    <View style={styles.bottomSheetOptionContent}>
